{
  "name": "phone-usage-slack-reporter",
  "version": "1.0.0",
  "description": "スマホ使用時間統計をSlackに定期的に通知するアプリ",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "jest",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "check-data": "ts-node src/check-data.ts",
    "test-report": "ts-node src/test-report.ts",
    "test-chart": "ts-node src/test-d3-chart.ts"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@slack/webhook": "^7.0.5",
    "@supabase/supabase-js": "^2.49.4",
    "canvas": "^3.1.0",
    "d3": "^7.9.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/express": "^4.17.17",
    "@types/google-cloud__storage": "^1.7.2",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.17.30",
    "@types/node-cron": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "",
  "license": "MIT"
}
